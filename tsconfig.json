{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": ["./src/**/*"], // Include all files in src directory
    "exclude": ["node_modules", "dist"]
}
